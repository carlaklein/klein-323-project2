<%- include('_partial/_header'); -%>

<div class="row">
    <div class="col-md-6">
        <h1>New Post</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form action="/posts/add" method="POST">
            <div class="form-group">
                <label for="inputCaption">Caption</label>
                <input type="text" class="form-control" placeholder="Caption" id="inputCaption" name="photo_caption">
            </div>

            <div class="form-group">
                <label for="inputGeo">Geolocation</label>
                <input class="form-control" id="inputGeo" placeholder="eg. Place" name="geolocation">
            </div>

            <div class="form-group">
                <label for="inputTags">Tags</label>
                <input class="form-control" id="inputTags" placeholder="Tags" name="tags">
            </div>

            <div class="form-group">
                <label for="input_captured_by">Captured By</label>
                <input class="form-control" id="input_captured_by" placeholder="eg. Name" name="captured_by">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default" href="#" role="button">Create</button>
            </div>
    </div>

    </form>
</div>


<%- include ('_partial/_footer'); -%>