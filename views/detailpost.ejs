<%- include('_partial/_header'); -%>

<div class="row">
    <div class="col-md-6">
        <div class="thumbnail">
            <% if(post.image != null) { %>
                <img src="<%= '/' + post.image %>";
                alt="logo"
                style="height:200px;width:100%;display:block"
                >
            <% } else { %>
                <img src="data:image/svg+xml;base64,"
                alt="logo"
                style="height:200px;width:100%;display:block"
                >
            <% } %>
            <div class="caption">
                <h6><%= post.geolocation %></h6>
                <h3><%= post.photo_caption %></h3> 
                <h6>Captured by <%= post.captured_by %> on <%= post.captured_date %></h6>
                <h7><%= post.tags %></h7>
            </div>
    </div>
</div>
 
<%- include('_partial/_footer'); -%>